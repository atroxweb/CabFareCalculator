<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yourspider.taxifarecalculator"
    android:versionCode="4"
    android:versionName="4.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="21" />
    <uses-permission android:name="android.permission.INTERNET" /> 
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-library android:name="com.google.android.maps" />
        <activity
            android:name="com.yourspider.taxifarecalculator.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yourspider.taxifarecalculator.ZipActivity"
            android:label="@string/title_activity_zip"
            android:parentActivityName="com.yourspider.taxifarecalculator.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yourspider.taxifarecalculator.MainActivity" />
        </activity>
        <activity
            android:name="com.yourspider.taxifarecalculator.CityActivity"
            android:label="@string/title_activity_city"
            android:parentActivityName="com.yourspider.taxifarecalculator.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yourspider.taxifarecalculator.MainActivity" />
        </activity>
        <activity
            android:name="com.yourspider.taxifarecalculator.AddressActivity"
            android:label="@string/title_activity_address"
            android:parentActivityName="com.yourspider.taxifarecalculator.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yourspider.taxifarecalculator.MainActivity" />
        </activity>
        <activity
            android:name="com.yourspider.taxifarecalculator.DistanceActivity"
            android:label="@string/title_activity_distance"
            android:parentActivityName="com.yourspider.taxifarecalculator.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yourspider.taxifarecalculator.MainActivity" />
        </activity>
        <activity
            android:name="com.yourspider.taxifarecalculator.SettingActivity"
            android:label="@string/title_activity_preference"
            android:parentActivityName="com.yourspider.taxifarecalculator.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yourspider.taxifarecalculator.MainActivity" />
        </activity>
        <activity
            android:name="com.yourspider.taxifarecalculator.ResultActivity"
            android:label="@string/title_activity_result"
            android:parentActivityName="com.yourspider.taxifarecalculator.ZipActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yourspider.taxifarecalculator.ZipActivity" />
        </activity>
        
    </application>

</manifest>
